    "axios": "^1.13.2",
    "minimatch": "^5.1.6",
    "node-llama-cpp": "^2.8.16"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {},
  "peerDependenciesMeta": {}
}

