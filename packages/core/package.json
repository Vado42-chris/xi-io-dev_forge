    "test": "vitest",
    "lint": "eslint src --ext ts"
  },
  "keywords": [
    "dev-forge",
    "sdk",
    "ai",
    "models",
    "plugins",
    "extensibility"
  ],
  "author": "Xibalba Mixed Media Studio",
  "license": "MIT",
