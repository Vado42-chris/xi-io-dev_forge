{
  "name": "dev-forge-electron",
  "version": "0.1.0",
  "description": "Dev Forge - Standalone Electron-based coding editor",
  "main": "dist/main.js",
  "author": "Xibalba Mixed Media Studio",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc && npm run copy-assets",
        "copy-assets": "cp index.html dist/ && mkdir -p dist/styles && cp -r src/styles/*.css dist/styles/ 2>/dev/null || true",
    "watch": "tsc --watch",
    "start": "npm run build && electron dist/main.js",
    "dev": "npm run build && electron dist/main.js --dev",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "better-sqlite3": "^9.2.2",
    "monaco-editor": "^0.45.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "electron-builder": "^24.9.1"
  },
  "overrides": {
    "electron": "^28.0.0"
  },
  "build": {
    "appId": "com.xibalba.dev-forge",
    "productName": "Dev Forge",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}

